# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.js]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.scss]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 4

[*.jinja2]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.mjml]
indent_style = space
indent_size = 2
